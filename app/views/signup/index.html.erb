<div class = "testbox">
<center>
	<%= form_for @user do |f| %>
		<h1>Sign Up</h1>

		
		<br />
	    <%= f.text_field :username, :placeholder => "Username" %> <br />

	    <%= f.password_field :password, :placeholder => "Password" %><br /><br />
				  
		<%= f.submit "Sign up", class: "btn btn-large btn-primary" %>
	
	<% end %>
</center>
</div>