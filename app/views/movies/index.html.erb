<center>

	<h1>Welcome to MovieTrackr</h1>
	<% if signed_in? %>
	  <h2>Hello, <%= current_user.username %>!</h2>
	<% end %>
	<br />
	<br />

	<% if signed_in? %>

		<%= link_to "Add a movie", new_movie_path %> - 
		<%= link_to "View all movies", movies_path %> -

		<% if !@own_movies.empty? %>

		<%= link_to "View own movies", movies_own_path %> -
		
		<% end %>

		<%= link_to "Edit profile", edit_user_path(current_user) %> - 
		<%= link_to "Sign out", signout_path, method: "delete" %>

		<% if current_user.admin? %>

		- <%= link_to "Admin panel", admin_index_path %>

		<% end %>

	<% else %>

		<%= link_to "Log in", signin_path %> - 
		<%= link_to "Sign up", signup_index_path %> -
		<%= link_to "View all movies", movies_path %>

	<% end %>

<br />
<br />

<% if @movies.empty? %>
	Geen films in database
<% else %>

	<table>

		<tr>
			<th>ID</th>
			<th>Title</th>
			<th>Rating</th>
			<th>Added By</th>

			<% if signed_in? && current_user.admin? %>

				<th>Actions</th>

			<% end %>

		</tr>

		<% @movies.each do |film| %>

		<tr>
			<td><%= film.id %></td>
			<td><%= film.title %></td>	
			<td><%= film.rating %></td>
			<td><%= film.user.username %></td>			

			<% if signed_in? && current_user.admin? %>

				<td>
					<%= link_to "delete", film, method: :delete %>
				</td>
			
			<% end %>			
		</tr>

		<% end %>

	</table>

<% end %>
</center>