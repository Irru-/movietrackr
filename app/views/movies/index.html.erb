<center>

  <h1>Welcome to MovieTrackr</h1>
  <% if signed_in? %>
    <h2>Hello, <%= current_user.username %>!</h2>
  <% end %>
  <br />
  <br />

<% if @movies.empty? %>
  Geen films in database
<% else %>

  <table class="table">

    <tr>
      <th>
          <%= link_to "Id", movies_path(:sorteer => @id) %>
      </th>
      <th>
          <%= link_to "Title", movies_path(:sorteer => @title) %>
      </th>
      <th>
          <%= link_to "Rating", movies_path(:sorteer => @rating) %>
      </th>
      <th>
          <%= link_to "Added by", movies_path(:sorteer => @username) %>
      </th>

      <% if signed_in? && current_user.admin? %>

        <th>Actions</th>

      <% end %>

    </tr>

    <% @movies.each do |film| %>

    <tr>
      <td><%= film.id %></td>
      <td><%= film.title %></td>  
      <td><%= film.rating %></td>
      <td><%= film.user.username %></td>      

      <% if signed_in? && current_user.admin? %>

        <td>
          <%= link_to "delete", film, method: :delete %>
        </td>
      
      <% end %>     
    </tr>

    <% end %>

  </table>

<% end %>
<br /> <br />
<%= debug(params) if Rails.env.development? %>

</center>