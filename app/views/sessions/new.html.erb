<div class = "testbox">
	<center>

		<h1>Log In</h1>

		<%= form_for(:session, url: sessions_path) do |f| %>

		    <%= f.text_field :username, :placeholder => "Username or email" %>
	 
		    <%= f.password_field :password, :placeholder => "Password" %><br />

		    <%= f.submit "Log in", class: "btn btn-large btn-primary" %>

		<% end %>
	</center>
</div>